<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gp.GameController">
   <top>
      <HBox alignment="CENTER" prefHeight="60.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="xpLabel" alignment="CENTER_LEFT" prefWidth="100.0" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" text="XP: 0">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
            <Label fx:id="titleLabel" alignment="CENTER" HBox.hgrow="ALWAYS" prefHeight="60.0" prefWidth="600.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Jogo Pokémon">
               <HBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </HBox.margin>
            </Label>
            <Label fx:id="attemptsLabel" alignment="CENTER_RIGHT" prefWidth="150.0" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" text="Tentativas: 0">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
   </top>
   <center>
      <VBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="questionLabel" alignment="CENTER" prefHeight="40.0" prefWidth="600.0" style="-fx-font-size: 18px;" text="Pergunta aparecerá aqui" wrapText="true" />
            
            <ImageView fx:id="mainImageView" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            
            <!-- Campo de nome para tela 2 -->
            <TextField fx:id="nameTextField" maxWidth="300.0" promptText="Digite seu nome" visible="false" />
            
            <!-- Seleção de personagem para tela 2 -->
            <VBox fx:id="characterSelectionBox" alignment="CENTER" spacing="10.0" visible="false">
               <children>
                  <Label style="-fx-font-size: 16px;" text="Escolha seu personagem:" />
                  <ImageView fx:id="characterImageView" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </VBox>
            
            <!-- Botões de opções -->
            <VBox alignment="CENTER" spacing="15.0">
               <children>
                  <Button fx:id="optionAButton" maxWidth="400.0" minHeight="40.0" onAction="#handleOptionA" style="-fx-font-size: 14px;" text="Opção A" />
                  <Button fx:id="optionBButton" maxWidth="400.0" minHeight="40.0" onAction="#handleOptionB" style="-fx-font-size: 14px;" text="Opção B" />
                  <Button fx:id="optionCButton" maxWidth="400.0" minHeight="40.0" onAction="#handleOptionC" style="-fx-font-size: 14px;" text="Opção C" />
               </children>
            </VBox>
            
            <!-- Resultado e botão de próxima -->
            <Label fx:id="resultLabel" alignment="CENTER" prefHeight="30.0" prefWidth="600.0" style="-fx-font-size: 16px;" text="" wrapText="true" />
            
            <Button fx:id="nextButton" minHeight="40.0" minWidth="120.0" onAction="#handleNext" style="-fx-font-size: 14px; -fx-background-color: #3498db; -fx-text-fill: white;" text="Próximo" visible="false" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <Label style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" text="Use o mouse para navegar entre as telas" />
         </children>
      </HBox>
   </bottom>
</BorderPane>

